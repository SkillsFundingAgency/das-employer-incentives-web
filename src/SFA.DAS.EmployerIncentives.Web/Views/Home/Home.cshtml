@model SFA.DAS.EmployerIncentives.Web.ViewModels.Home.HomeViewModel
@{
    ViewData["Title"] = Model.Title;
    ViewBag.GaData.Vpv = "employer-incentives-start-page";
    ViewData["ZenDeskLabels"] = "ei-start";
}

<a asp-action="BeforeStart" asp-controller="Home" asp-route-accountid="@Model.AccountId" asp-route-accountlegalentityid="@Model.AccountLegalEntityId" class="govuk-back-link">Back</a>

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">
                @Model.Title
            </h1>

            <p class="govuk-body">
                @Model.OrganisationName can apply for £3,000 for apprentices with an employment start date from <span class="das-no-wrap">1 October 2021</span> to <span class="das-no-wrap">31 January 2022</span>.
            </p>
            <p class="govuk-body">
                Applications close on <span class="das-no-wrap">15 May 2022</span>.
            </p>
            <p class="govuk-body">
                You can apply for the payment after you add new apprentices to your apprenticeship service account.
            </p>

            <details class="govuk-details" data-module="govuk-details">
                <summary class="govuk-details__summary">
                    <span class="govuk-details__summary-text">
                        When will you get paid?
                    </span>
                </summary>
                <div class="govuk-details__text">
                    <p class="govuk-body">
                        We'll send the payment in 2 equal instalments for each apprentice.  To be eligible, your apprentice must complete:
                    </p>
                    <ul class="govuk-list govuk-list--bullet">
                        <li>90 days of their apprenticeship for your first payment</li>
                        <li>365 days of their apprenticeship for your second payment</li>
                    </ul>
                    <p class="govuk-body">
                        We will complete our checks, including cross-referencing the PAYE information. If the application is eligible, we will process the payments.
                    </p>
                    <p class="govuk-body">
                        Payments will be made on the 14th working day of the month, it can take up to 3 days for the payments to reach your account.
                    </p>
                    <p class="govuk-body">
                        You can track when your payments are due to be paid on your view applications page.
                    </p>
                    <p class="govuk-body">
                        We cannot send any payments until we’ve received and verified @Model.OrganisationName’s organisation and finance details. This could take up to 80 days and we may contact someone from @Model.OrganisationName.
                    </p>
                </div>
            </details>

            <details class="govuk-details" data-module="govuk-details">
                <summary class="govuk-details__summary">
                    <span class="govuk-details__summary-text">
                        What can you use the payment for?
                    </span>
                </summary>
                <div class="govuk-details__text">
                    <p class="govuk-body">
                        @Model.OrganisationName can spend it on anything to support their organisation’s costs.  @Model.OrganisationName does not have to pay it back.
                    </p>
                    <p class="govuk-body">
                        The payment is in addition to the existing £1,000 an employer will already get for taking on an apprentice who is either:
                    </p>
                    <ul class="govuk-list govuk-list--bullet">
                        <li>aged 16 to 18 years old</li>
                        <li>under 25 and has an education, health and care plan or has been in the care of their local authority</li>
                    </ul>
                </div>
            </details>

            <details class="govuk-details" data-module="govuk-details">
                <summary class="govuk-details__summary">
                    <span class="govuk-details__summary-text">
                        Are you applying for apprentices who you previously recruited under the Kickstart scheme?
                    </span>
                </summary>
                <div class="govuk-details__text">
                    <p class="govuk-body">
                        If you can prove that you recruited an apprentice under the Kickstart scheme, you can apply for these apprentices using their apprenticeship start date instead of the employment start date.
                    </p>
                </div>
            </details>

            <a asp-action="GetQualificationQuestion" asp-controller="ApplyQualification" asp-route-accountid="@Model.AccountId" asp-route-accountlegalentityid="@Model.AccountLegalEntityId" role="button" draggable="false" class="govuk-button govuk-!-margin-top-2 govuk-!-margin-bottom-8 govuk-button--start" data-module="govuk-button" data-linktype="apply-qualification">
                Start now
                <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                    <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
                </svg>
            </a>
        </div>
    </div>
</main>