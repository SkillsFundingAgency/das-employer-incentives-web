@model SFA.DAS.EmployerIncentives.Web.ViewModels.Apply.SelectApprenticesViewModel

@{
    ViewData["Title"] = Model.Title;
}

<main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <form action="" method="post" class="form">
                <div class="govuk-form-group">
                    <fieldset class="govuk-fieldset" aria-describedby="new-apprentices-hint">
                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                            <h1 class="govuk-fieldset__heading">
                                @Model.Title
                            </h1>
                        </legend>

                        <p>You can only choose from your apprentices:</p>
                        <ul class="govuk-list govuk-list--bullet">
                            <li>with a planned start date after 1 August 2020</li>
                            <li>that you have not applied for already</li>
                        </ul>
                        <div class="govuk-inset-text"><p>You must only select apprentices that joined your payroll after 1 August 2020.</p></div>

                        <span id="new-apprentices-hint" class="govuk-hint">
                            Select all that apply.
                        </span>

                        <div class="govuk-checkboxes">
                            @foreach (var apprentice in Model.Apprentices)
                            {
                                <div class="govuk-checkboxes__item">
                                    <input class="govuk-checkboxes__input" id="new-apprentices-@apprentice.Id" name="apprentice1" type="checkbox" value="apprentice1" aria-describedby="new-apprentices-item-hint" />
                                    <label class="govuk-label govuk-checkboxes__label" for="new-apprentices-@apprentice.Id">
                                        @apprentice.FullName
                                    </label>
                                    <span id="new-apprentices-item-hint" class="govuk-hint govuk-checkboxes__hint">
                                        @apprentice.CourseName
                                    </span>
                                </div>
                            }
                        </div>
                    </fieldset>
                </div>

                <button class="govuk-button" data-module="govuk-button">
                    Continue
                </button>

            </form>
        </div>
    </div>
</main>
