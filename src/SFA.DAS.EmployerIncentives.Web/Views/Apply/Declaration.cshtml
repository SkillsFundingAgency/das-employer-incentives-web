@model SFA.DAS.EmployerIncentives.Web.ViewModels.Apply.DeclarationViewModel

@{
    ViewData["Title"] = Model.Title;
    ViewBag.GaData.Vpv = "/apply/declaration";
    ViewData["ZenDeskLabels"] = "ei-declaration";
}

<a asp-action="ConfirmApprenticeships" asp-route-all="false" asp-controller="ApplyApprenticeships" asp-route-accountid="@Model.AccountId" asp-route-applicationid="@Model.ApplicationId" class="govuk-back-link">Back</a>

<main class="govuk-main-wrapper" id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-l">
                @Model.Title
            </h1>

            <p class="govuk-body">
                You are about to submit @Model.OrganisationName's application for the hire a new apprentice payment.
            </p>

            <p class="govuk-body">
                By submitting this application, you declare that:
            </p>
            <ul class="govuk-list govuk-list--bullet">
                <li>all the information in this application is correct</li>
                <li>all the apprentices in this application have:
                    <ul class="dashed">
                        <li>an employment start date from <span class="das-no-wrap">1 April 2021</span> to <span class="das-no-wrap">30 September 2021</span> with an apprenticeship start date from <span class="das-no-wrap">1 April 2021</span> to <span class="das-no-wrap">30 November 2021</span></li>
                        <li>Or, an employment start date from <span class="das-no-wrap">1 October 2021</span> to <span class="das-no-wrap">31 January 2022</span>, with an apprenticeship start date from <span class="das-no-wrap">1 October 2021</span> to <span class="das-no-wrap">31 March 2022</span></li>
                    </ul>
                </li>
                <li>you understand we will be undertaking checks of apprentice employment date, which may include cross-referencing with PAYE data</li>
                <li>you understand that where applicable, we may ask for evidence that your apprentice was recruited as part of the Kickstart scheme</li>
                <li>all the apprentices in this application are eligible in accordance with <a href="https://www.gov.uk/guidance/apprenticeship-funding-rules" target="_blank">the funding rules</a></li>
                <li>you understand we will stop payments and reclaim any funds paid for apprentices identified as ineligible</li>
                <li>you understand that @Model.OrganisationName must contact apprenticeship service support about any changes to the information provided</li>
                <li>you have read and understood <a href="@Model.AgreementsUrl" target="_blank">the agreement</a></li>
            </ul>

            <form asp-action="SubmitApplication" asp-controller="Apply" method="post" class="form">
                <button type="submit" class="govuk-button" data-module="govuk-button" data-prevent-double-click="true">
                    Confirm and submit
                </button>
            </form>
        </div>
    </div>
</main>