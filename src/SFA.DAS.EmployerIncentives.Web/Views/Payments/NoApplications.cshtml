@model SFA.DAS.EmployerIncentives.Web.ViewModels.Applications.NoApplicationsViewModel
@{
    ViewData["Title"] = Model.Title;
    ViewBag.GaData.Vpv = "/payments/no-applications";
    ViewData["ZenDeskLabels"] = "ei-no-applications";
}

<a asp-action="Index" asp-controller="Hub" asp-route-accountid="@Model.AccountId" asp-route-accountlegalentityid="@Model.AccountLegalEntityId" class="govuk-back-link">Back</a>

<main class="govuk-main-wrapper " id="main-content" role="main">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <h1 class="govuk-heading-l">@Model.Title</h1>

            <p class="govuk-body">
                @Model.OrganisationName can apply for apprentices with an employment start date from <span class="das-no-wrap">1 April 2021</span> to <span class="das-no-wrap">30 September 2021</span>, applications close on <span class="das-no-wrap">30 November 2021.</span>
                <br />
                They must also have an apprenticeship start date from <span class="das-no-wrap">1 April 2021</span> to <span class="das-no-wrap">30 November 2021</span>.
            </p>
            <p class="govuk-body">
                In addition, @Model.OrganisationName can apply for apprentices with an employment start date from <span class="das-no-wrap">1 October 2021</span> to <span class="das-no-wrap">31 January 2022</span>, applications close on <span class="das-no-wrap">31 March 2022</span>.
                <br />
                They must also have an apprenticeship start date from <span class="das-no-wrap">1 October 2021</span> to <span class="das-no-wrap">31 March 2022</span>.
            </p>

            <a asp-action="Start" asp-controller="Home" asp-route-accountid="@Model.AccountId" asp-route-accountlegalentityid="@Model.AccountLegalEntityId" role="button" draggable="false" class="govuk-button" data-module="govuk-button">
                Apply
            </a>
        </div>
    </div>


</main>