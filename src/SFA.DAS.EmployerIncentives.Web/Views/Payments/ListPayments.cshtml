@using System.Globalization
@using SFA.DAS.EmployerIncentives.Web.Models
@model SFA.DAS.EmployerIncentives.Web.ViewModels.Applications.ViewApplicationsViewModel

@{
    var culture = new CultureInfo("en-GB");
    ViewData["Title"] = Model.Title;
    ViewBag.GaData.Vpv = "/payments/payment-applications";
    ViewData["ZenDeskLabels"] = "ei-payment-applications";
}

<main class="govuk-main-wrapper " id="main-content" role="main">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <h1 class="govuk-heading-xl">
                @Model.Title
            </h1>

            @* IF VRF complete and BC vendor set up complete
                <h2 class="govuk-heading-m">
                    You've added your organisation's bank details
                </h2>
                <p class="govuk-body">
                    We've confirmed the bank details you added during your hire a new apprentice payment application. You do not need to do anything else.
                </p>
            /IF VRF complete and BC vendor set up complete *@

            @* IF VRF complete and in progress with BC
                <div class="govuk-inset-text">
                    <h2 class="govuk-heading-m">
                        We're reviewing your organisation's bank details
                    </h2>
                    <p class="govuk-body">
                        We may contact someone from your organisation to verify the information you've provided.
                    </p>
                </div>
            /IF VRF complete and in progress with BC *@


            @* IF no VRF
                <div class="das-highlight das-highlight--featured">
                    <h2 class="govuk-heading-m das-highlight--featured__title govuk-!-margin-bottom-1">
                        Add your organisation's bank details
                    </h2>
                    <p class="govuk-body das-highlight--featured__body">
                        We need your organisation's bank details, so that we can make the hire a new apprentice payment.
                    </p>
                    <p class="govuk-body das-highlight--featured__body govuk-!-margin-bottom-0 govuk-!-font-weight-bold">
                        <a class="govuk-link das-link--white" href="#">Add bank details</a>
                    </p>
                </div>
            /IF no VRF *@

            <details class="govuk-details" data-module="govuk-details">
                <summary class="govuk-details__summary">
                    <span class="govuk-details__summary-text">
                        When you'll get paid
                    </span>
                </summary>
                <div class="govuk-details__text">
                    <p class="govuk-body">
                        You'll receive the first payment after the apprentice completes 90 days of
                        their apprenticeship training and the second payment after 365 days. Your training provider will
                        confirm the apprenticeship start date and we'll add 90 days to the last calendar day of the
                        month.
                    </p>
                    <p class="govuk-body">
                        We make payments on the 14th working day of each month, starting from January
                        2021. It will take longer to get your first payment for any apprentices who start their training
                        in August or September.
                    </p>
                    <p class="govuk-body">
                        For example, if your training provider confirms an apprentice started their
                        apprenticeship training on:
                    </p>
                    <ul class="govuk-list govuk-list--bullet">
                        <li>
                            1 September 2020 - we'll make the first payment on 14 January 2021
                        </li>
                        <li>
                            4 January 2021 - we'll make the first payment on 14 April 2021
                        </li>
                    </ul>
                </div>
            </details>

            <p class="govuk-body">
                <a href="https://help.apprenticeships.education.gov.uk/hc/en-gb#contact-us" class="govuk-link">Contact us</a> to cancel an application.
            <p>
        </div>
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <table class="govuk-table">
                <caption class="govuk-table__caption govuk-visually-hidden">
                    Your applications
                </caption>
                <thead class="govuk-table__head">
                    <tr class="govuk-table__row">
                        <th aria-sort="@Model.GetAriaSortOrder(@ApplicationsSortField.ApprenticeName)" scope="col" class="govuk-table__header">
                            <a asp-route-sortorder="@Model.ToggleSortOrder(ApplicationsSortField.ApprenticeName)" asp-route-sortfield="@ApplicationsSortField.ApprenticeName" class="das-table__sort das-table__sort--@Model.GetSortOrder(ApplicationsSortField.ApprenticeName)">Apprentice
                                name
                            </a>
                        </th>
                        <th aria-sort="@Model.GetAriaSortOrder(@ApplicationsSortField.ApplicationDate)" scope="col" class="govuk-table__header">
                            <a asp-route-sortorder="@Model.ToggleSortOrder(ApplicationsSortField.ApplicationDate)" asp-route-sortfield="@ApplicationsSortField.ApplicationDate" class="das-table__sort das-table__sort--@Model.GetSortOrder(ApplicationsSortField.ApplicationDate)">Application
                                date
                            </a>
                        </th>
                        <th aria-sort="@Model.GetAriaSortOrder(@ApplicationsSortField.TotalIncentiveAmount)" scope="col" class="govuk-table__header">
                            <a asp-route-sortorder="@Model.ToggleSortOrder(ApplicationsSortField.TotalIncentiveAmount)" asp-route-sortfield="@ApplicationsSortField.TotalIncentiveAmount" class="das-table__sort das-table__sort--@Model.GetSortOrder(ApplicationsSortField.TotalIncentiveAmount)">Estimated
                                payment
                            </a>
                        </th>
                    </tr>
                </thead>
                <tbody class="govuk-table__body">
                    @foreach (var apprenticeApplication in Model.Applications)
                    {
                        <tr class="govuk-table__row">
                            <td data-label="Apprentice name" class="govuk-table__cell">
                                @apprenticeApplication.ApprenticeName
                            </td>
                            <td data-label="Application date" class="govuk-table__cell">
                                @apprenticeApplication.ApplicationDate.ToString("d MMMM yyyy", culture)
                            </td>
                            <td data-label="Estimated payment" class="govuk-table__cell">
                                @apprenticeApplication.TotalIncentiveAmount.ToString("C0", culture)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

