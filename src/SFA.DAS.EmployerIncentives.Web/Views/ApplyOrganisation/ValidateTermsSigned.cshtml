@model SFA.DAS.EmployerIncentives.Web.ViewModels.Apply.ValidateTermsSignedViewModel

@{
    ViewData["Title"] = Model.Title;
}

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">
                @Model.Title
            </h1>
            <p class="govuk-body">
                To apply for the hire a new apprentice payment, all employers must review and sign a new agreement with the Education and Skills Funding Agency.
            </p>
            <p class="govuk-body">
                The new agreement includes the terms for using the payment and accessing funding through the apprenticeship service.
            </p>
            <p class="govuk-body">
                You must have permission to ‘accept agreements’ for your organisation
            </p>

            <a href="@Model.AccountsAgreementsUrl" role="button" draggable="false" class="govuk-button govuk-!-margin-top-2 govuk-!-margin-bottom-8 govuk-button--start" data-module="govuk-button">
                View agreement
                <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                    <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
                </svg>
            </a>

            <p class="govuk-body">
                <a class="govuk-link" href="@Model.AccountsHomeUrl">
                    Return to account home
                </a>
            </p>
        </div>
    </div>
</main>