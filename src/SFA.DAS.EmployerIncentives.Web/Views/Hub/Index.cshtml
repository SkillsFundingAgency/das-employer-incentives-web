@model SFA.DAS.EmployerIncentives.Web.ViewModels.HubPageViewModel
 
<a href="#" class="govuk-back-link">Back</a>

<main class="govuk-main-wrapper" id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <span class="govuk-caption-xl">
                @Model.OrganisationName
            </span>
            <h1 class="govuk-heading-xl">
                Hire a new apprentice payment
            </h1>

            <p class="govuk-body govuk-!-margin-bottom-6">
                Apply for the payment and view @Model.OrganisationName’s applications.
            </p>
        </div>
    </div>

    <hr class="govuk-section-break govuk-section-break--visible das-section-break--heavy-grey govuk-!-margin-bottom-9">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <div class="govuk-grid-row">

                <div class="govuk-grid-column-one-half">
                    <h3 class="govuk-heading-m">
                        <a
                            asp-controller="Home"
                            asp-action="Start"
                            asp-route-accountid="@Model.AccountId"
                            asp-route-accountlegalentityid="@Model.AccountLegalEntityId"
                            class="govuk-link govuk-link--no-visited-state"
                        >
                            Apply for the hire a new apprentice payment
                        </a>
                    </h3>
                    <p class="govuk-body">
                        You can apply for the payment if @Model.OrganisationName hires new apprentices from 1 August 2020 to 31 March 2021
                    </p>
                </div>

                <div class="govuk-grid-column-one-half">
                    <h3 class="govuk-heading-m">
                        <a
                            asp-controller="Payments"
                            asp-action="ListPaymentsForLegalEntity"
                            asp-route-accountid="@Model.AccountId"
                            asp-route-accountlegalentityid="@Model.AccountLegalEntityId"
                            class="govuk-link govuk-link--no-visited-state"
                        >
                            View applications
                        </a>
                    </h3>
                    <p class="govuk-body">
                        View @Model.OrganisationName's applications and estimated payments.
                    </p>
                </div>
            </div>

        </div>
    </div>
</main>