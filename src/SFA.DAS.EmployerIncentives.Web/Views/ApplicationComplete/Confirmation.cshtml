@model SFA.DAS.EmployerIncentives.Web.ViewModels.ApplicationComplete.ConfirmationViewModel
@{
    ViewData["Title"] = Model.Title;
    ViewBag.GaData.Vpv = "/application-complete";
    ViewData["ZenDeskLabels"] = "ei-applicationcomplete";
}

<main class="govuk-main-wrapper govuk-main-wrapper--l" id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <div class="govuk-panel govuk-panel--confirmation govuk-!-margin-bottom-8">
                <h1 class="govuk-panel__title">
                    @Model.Title
                </h1>
            </div>

            <h2 class="govuk-heading-m">What happens next</h2>
            @if (Model.ShowBankDetailsInReview)
            {
                <p class="govuk-body">
                    We cannot make any payments until we've verified @Model.OrganisationName's organisation and finance details. This could take up to 3 months and we may contact someone from @Model.OrganisationName.
                </p>
                <h2 class="govuk-heading-m">After we've verified @Model.OrganisationName's organisation and finance details</h2>
            }
            <p class="govuk-body">
                We'll make the payment in 2 equal instalments for each apprentice. The first payment is after an apprentice completes 90 days of their apprenticeship and the second is after 365 days. The training provider needs to confirm to ESFA when an apprentice is ready for each payment.
            </p>
            <p class="govuk-body">
                Payments are made by Bacs on the 14th working day of the month. It usually takes 3 working days to process.
            </p>
            
            <h2 class="govuk-heading-m">Your applications</h2>
            <p class="govuk-body">
                You can view applications and estimated payment dates in the apprenticeship service account.
            </p>

            <a asp-controller="Payments" asp-action="ListPaymentsForLegalEntity" asp-route-accountid="@Model.AccountId" asp-route-accountlegalentityid="@Model.AccountLegalEntityId" asp role="button" draggable="false" class="govuk-button" data-module="govuk-button">
                View applications
            </a>

            <p class="govuk-body">
                <a href="https://www.smartsurvey.co.uk/s/HANAIP" class="govuk-link">What did you think of this service?</a> (takes 30 seconds)
            </p>
        </div>
    </div>
</main>